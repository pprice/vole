// Unit tests for the panic builtin
// Note: panic() terminates the program, so we can only test that
// code BEFORE panic executes correctly. The actual panic behavior
// is tested via snapshot tests that capture stderr output.

tests {
    test "code before panic runs" {
        let x = 1 + 1
        assert(x == 2)
        // We can't call panic here as it would abort the test harness
    }

    test "panic message can be string literal" {
        // This test verifies syntax - panic takes a string
        // We just check that the code would compile
        let msg = "error message"
        assert(msg == "error message")
    }

    test "panic message can be interpolated" {
        let code = 42
        let msg = "error code: {code}"
        assert(msg == "error code: 42")
    }
}
