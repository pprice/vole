// Basic parameter default value tests
// Tests that default value parsing, validation, and storage work correctly
// Note: Actually CALLING with defaults omitted requires v-34b8

// Simple function with defaults - validates type checking
func greet(name: string = "World") -> string {
    return "Hello, " + name + "!"
}

// Multiple params, some with defaults - validates ordering is enforced
func add_offset(x: i64, offset: i64 = 10) -> i64 {
    return x + offset
}

// All params with defaults - validates multiple defaults
func make_message(greeting: string = "Hi", name: string = "there") -> string {
    return greeting + ", " + name + "!"
}

// Numeric defaults
func calc(base: i64 = 100, multiplier: i64 = 2) -> i64 {
    return base * multiplier
}

// Boolean defaults
func check(value: bool = true) -> bool {
    return value
}

tests {
    test "functions with defaults can be called with all args" {
        // All these calls provide explicit values for all params
        assert(greet("Vole") == "Hello, Vole!")
        assert(add_offset(5, 20) == 25)
        assert(make_message("Hey", "you") == "Hey, you!")
        assert(calc(10, 3) == 30)
        assert(check(false) == false)
    }
}
