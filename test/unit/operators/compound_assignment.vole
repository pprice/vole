// Compound assignment operators tests

tests "compound assignment" {
    test "add assign" {
        var x = 10
        x += 5
        assert(x == 15)
    }

    test "sub assign" {
        var x = 10
        x -= 3
        assert(x == 7)
    }

    test "mul assign" {
        var x = 4
        x *= 3
        assert(x == 12)
    }

    test "div assign" {
        var x = 20
        x /= 4
        assert(x == 5)
    }

    test "mod assign" {
        var x = 17
        x %= 5
        assert(x == 2)
    }

    test "float add assign" {
        var f: f64 = 3.5
        f += 1.5
        assert(f == 5.0)
    }

    test "array index" {
        var arr = [1, 2, 3]
        arr[0] += 10
        assert(arr[0] == 11)
    }

    test "chained" {
        var x = 5
        x += 3
        x *= 2
        x -= 4
        assert(x == 12)
    }
}
