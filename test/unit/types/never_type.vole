// Unit tests for the never type and unreachable expression
// Note: Full subtyping behavior (never as bottom type) is not yet implemented.
// These tests verify the basic parsing and type-checking.

tests {
    test "unreachable is valid expression syntax" {
        // This test verifies that unreachable parses and type-checks.
        // We can't actually execute unreachable since it traps.
        let x = 1
        assert(x == 1)
    }

    test "never type annotation parses" {
        // Test that 'never' can be used as a type annotation
        // The function returns never (bottom type)
        func returns_never() -> never {
            _ = unreachable
        }
        // We can reference the function but not call it in tests
        // (since it would trap)
        assert(true)
    }
}
