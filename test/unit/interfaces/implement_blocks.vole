// Test that implement blocks work for primitives and classes

interface Describable {
    func describe() -> string
}

extend i32 with Describable {
    func describe() -> string {
        return "an integer"
    }
}

extend string with Describable {
    func describe() -> string {
        return "a string"
    }
}

tests "primitive implement blocks" {
    test "implement block for i32" {
        let x: i32 = 42
        assert(x.describe() == "an integer")
    }

    test "implement block for string" {
        let s: string = "hello"
        assert(s.describe() == "a string")
    }
}
