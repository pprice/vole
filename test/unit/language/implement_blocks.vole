// Test that implement blocks parse and compile correctly
// NOTE: Method calls on primitives via implement blocks don't work at runtime yet.
// The IR generates field.get on primitives which fails to resolve the method.
// This is a known limitation - implement blocks work for classes/records but not primitives.

interface Describable {
    func describe() -> string
}

// This parses and compiles, but calling x.describe() on an i32 fails at runtime
implement Describable for i32 {
    func describe() -> string {
        return "an integer"
    }
}

tests {
    test "implement block parses" {
        // If we got here, the implement block parsed and compiled successfully
        // Actual method dispatch on primitives is not yet implemented
        let x: i32 = 42
        assert(x == 42)
    }
}
