// Arithmetic operations tests

tests "arithmetic" {
    test "addition" {
        assert(1 + 1 == 2)
        assert(10 + 5 == 15)
        assert(0 + 0 == 0)
        assert(-5 + 10 == 5)
    }

    test "subtraction" {
        assert(10 - 5 == 5)
        assert(5 - 10 == -5)
        assert(0 - 0 == 0)
    }

    test "multiplication" {
        assert(3 * 4 == 12)
        assert(0 * 100 == 0)
        assert(-2 * 3 == -6)
        assert(-2 * -3 == 6)
    }

    test "division" {
        assert(10 / 2 == 5)
        assert(7 / 2 == 3)
        assert(-6 / 2 == -3)
    }

    test "modulo" {
        assert(10 % 3 == 1)
        assert(15 % 5 == 0)
        assert(7 % 2 == 1)
    }

    test "precedence" {
        assert(2 + 3 * 4 == 14)
        assert((2 + 3) * 4 == 20)
        assert(10 - 2 * 3 == 4)
        assert(10 + 5 * 2 + 12 == 32)
    }

    test "negation" {
        assert(-5 == 0 - 5)
        assert(--5 == 5)
        let x = 10
        assert(-x == -10)
    }
}

tests "type promotion" {
    test "i32 default" {
        let a = 10
        let b = 20
        assert(a + b == 30)
    }

    test "i64 explicit" {
        let big: i64 = 1000000
        let result = big + 1
        assert(result == 1000001)
    }

    test "float operations" {
        let f1 = 3.5
        let f2 = 2.5
        assert(f1 + f2 == 6.0)
    }

    test "mixed arithmetic" {
        assert(10 + 20 * 2 == 50)
    }
}
