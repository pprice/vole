// Test discard syntax: _ = expr

func get_value() -> i64 => 42

func with_side_effect() -> i64 {
    print("side effect")
    return 100
}

tests {
    test "discard simple value" {
        _ = 42
        assert(true)  // If we got here, discard worked
    }

    test "discard function call" {
        _ = get_value()
        assert(true)
    }

    test "discard with side effects" {
        _ = with_side_effect()  // Should print "side effect"
        assert(true)
    }

    test "multiple discards" {
        _ = 1
        _ = 2
        _ = 3
        assert(true)
    }

    test "discard string" {
        _ = "hello"
        assert(true)
    }

    test "discard method call" {
        let s = "hello"
        _ = s.length()
        assert(true)
    }
}
